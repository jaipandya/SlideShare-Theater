{
  "name": "SlideShare Theater",
  "version": "0.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
        "matches": ["*://www.slideshare.net/*"],
        "js": ["jquery-2.1.1.min.js", "content.js"],
        "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_icon": {
        "19": "images/19x19.png",
        "38": "images/38x38.png"
    },
    "default_title": "Start SlideShare Theater"
  }
}